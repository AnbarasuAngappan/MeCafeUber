@model IEnumerable<MeCafeUber.Models.Memo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Memo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        /*table {
            width: 100%;
        }*/

        /*tr {
            background-color: #def;
        }*/

        th {
            background-color: #8a84d7;
        }

